<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:layout_margin="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/Imageu"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/uploadimage"
            android:onClick="imageuButtonClicked"
            android:scaleType="centerCrop"/>

        <EditText
            android:id="@+id/editcaption"
            android:background="@drawable/ed"
            android:padding="5dp"
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/productsans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Sport"
            android:textSize="16dp"
            android:layout_margin="10dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/sp">
        </Spinner>

        <ProgressBar
            android:id="@+id/progressBar2"
            android:progressDrawable="@drawable/shhh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/upload"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="UPLOAD"
            android:textColor="#fff"
            android:background="#e0e0e0"

            android:onClick="uploadButtonClicked"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout >
